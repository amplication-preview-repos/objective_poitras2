datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Device {
  id            String                @id @default(cuid())
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  deviceType    EnumDeviceDeviceType?
  voiceCommands VoiceCommand[]
  user          User?                 @relation(fields: [userId], references: [id])
  userId        String?
}

model Response {
  id             String        @id @default(cuid())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  responseText   String?
  voiceCommand   VoiceCommand? @relation(fields: [voiceCommandId], references: [id])
  voiceCommandId String?
}

model VoiceCommand {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  commandText String?
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
  device      Device?    @relation(fields: [deviceId], references: [id])
  deviceId    String?
  responses   Response[]
}

model User {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  firstName     String?
  lastName      String?
  username      String         @unique
  email         String?        @unique
  password      String
  roles         Json
  voiceCommands VoiceCommand[]
  devices       Device[]
}

enum EnumDeviceDeviceType {
  Option1
}
